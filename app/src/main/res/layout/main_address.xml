<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="16dp"
    android:elevation="12dp"
    app:cardUseCompatPadding="true"
    >


    <RelativeLayout
        android:id="@+id/forword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:weightSum="5">

        <TextView
            android:id="@+id/nametxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:text="Name"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/add1txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nametxt"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:textColor="#000"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/add2txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/add1txt"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:textColor="#000"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/citytxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/add2txt"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:textColor="#000"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/districttxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/citytxt"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:textColor="#000"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/provincetxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/districttxt"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:textColor="#000"
            android:textSize="15sp" />


        <LinearLayout
            android:id="@+id/li2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/provincetxt"
            android:orientation="horizontal">

            <Button
                android:id="@+id/RbtnEdit"
                android:layout_width="173dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="Edit"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/RbtnDelete"
                android:layout_width="173dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Delete"
                android:textAllCaps="false" />

        </LinearLayout>


    </RelativeLayout>



</androidx.cardview.widget.CardView>